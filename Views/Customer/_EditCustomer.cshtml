@model Customer
@{
    ViewData["Title"] = "Relax Hotel | Edit Customer";
}
<div class="modal fade" id="EditCustomer-@Model.CustomerID" tabindex="-1" aria-labelledby="EditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <div class="d-flex align-items-center justify-content-center">
                    <img src="~/img/logo-hotel-bg.png" width="40px" />
                    <h5 class="ms-2">@ViewData["Title"]</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-start fw-bold">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="CustomerID" />
                    <div class="row">
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="FirstName">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                <input asp-for="FirstName" type="text" class="form-control" />
                            </div>
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="LastName">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                <input asp-for="LastName" type="text" class="form-control" />
                            </div>
                             <div class="col-md-6 form-group">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                            <select asp-for="Gender" class="form-select">
                                    <option value="">Select Gender</option>
                                <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
                                <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
                                </select>
                            </div>

                            <div class="col-md-6 form-group">
                                <label asp-for="Email" class="form-label">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Email" type="email" class="form-control"/>
                            </div>
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="PhoneNumber">Phone Number</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="PassportNumber">Passport Number</label>
                                <span asp-validation-for="PassportNumber" class="text-danger"></span>
                                <input asp-for="PassportNumber" class="form-control"  />
                            </div>
                            <div class="col-12 col-md-6 form-group">
                                <label asp-for="Country">Country</label>
                                <span asp-validation-for="Country" class="text-danger"></span>
                                <input asp-for="Country" type="text" class="form-control" />
                            </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>

                        <a class="btn btn-secondary text-white" data-bs-dismiss="modal">
                            <i class="fas fa-times"></i> Close
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
