
@model Hotel_Reservation.Models.Reservation

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Confirm Deletion</h2>
        </div>
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Are you sure you want to delete this reservation?</h4>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Customer:</strong> @Model.Customer.FirstName @Model.Customer.LastName
                        </li>
                        <li class="list-group-item">
                            <strong>Room:</strong> @Model.Room.RoomNumber
                        </li>
                        <li class="list-group-item">
                            <strong>Check-In Date:</strong> @Model.CheckInDate.ToShortDateString()
                        </li>
                        <li class="list-group-item">
                            <strong>Check-Out Date:</strong> @Model.CheckOutDate.ToShortDateString()
                        </li>
                    </ul>
                    <div class="mt-4 d-flex justify-content-between">
                        <form asp-action="Delete" asp-route-id="@Model.ReservationID" method="post">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>